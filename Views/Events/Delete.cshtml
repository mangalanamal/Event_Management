@model Event_Management.Models.EventModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2" style="display:none">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10" style="display:none">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2" style="display:none">
            @Html.DisplayNameFor(model => model.UserID)
        </dt>
        <dd class = "col-sm-10" style="display:none">
            @Html.DisplayFor(model => model.UserID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EventName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
       
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            @if (Model.ImageName != "")
            {
                <img src=@("~/Image/"+Model.ImageName) id="prv" asp-append-version="true" width="200px" height="200px" />
            }
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirm">        
        <input id="Id" name="Id" value="@Html.DisplayFor(model => model.Id)" style="display:none"/>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
